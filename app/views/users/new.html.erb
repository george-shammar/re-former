<%= form_tag action= "/users" method="post" accept-charset="UTF-8" do %>
    <%= input_tag type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" %>
    
    <%= label_tag for="username">Username: %><br>
    <%= input_tag id="username" name="user[username]" type="text" %><br><br>

    <%= label_tag for="email">email: %><br>
    <%= input_tag id="email" name="user[email]" type="text" %><br><br>

    <%= label_tag for="password">Password: %><br>
    <%= input_tag id="password" name="user[password]" type="password" %><br><br>

    <%= input_tag name="submit" type="submit" value="Submit" %>
<%= end %>